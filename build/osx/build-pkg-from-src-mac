#!/usr/bin/ksh

# Create package from local source
# Kevin Davies
# Version 1.0
PKG=alpaca
ID=com.app.${PKG}

# echo get package version
VER=`git describe --tags | head -1`
VER=${VER#v}
VER=${VER%-*-*}

# setup system vars
DIR=${PKG}-${VER}
GZ=${DIR}.tar.gz

PKGNAME=${DIR}-v${VER}.pkg
BUILD=/tmp/${PKG}-build
SCRIPTS=${PKG}-scripts

# Build and install to temp directory
mkdir ${BUILD}
export GOPATH=${BUILD}
CWD=$PWD
cd ../..
go install -ldflags="-X 'main.Version=v1.2.3' -X 'main.User=$(id -u -n)' -X 'main.Time=$(date)'"

# Copy postinstall script into place
cd $CWD
mkdir ${SCRIPTS}
cp build/osx/postinstall ${SCRIPTS}

# Build MacOSX package
pkgbuild --scripts ${SCRIPTS} --identifier ${ID} --version ${PKGVER} --root ${BUILD}  ${PKGNAME}

# Cleanup
rm -rf ${DIR} ${GZ} ${SCRIPTS} ${BUILD}

exit